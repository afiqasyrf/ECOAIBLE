<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context=".Sweetcorn">

    <TextView
        android:text="Guideline each month"
        android:textSize="37sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="All stages"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@drawable/month" >
            </ImageView>

            <TextView
                android:text="1 Month"
                android:textSize="30sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:background="@drawable/img" >
            </ImageView>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/img_1" >
            </ImageView>


            <TextView
                android:text="2 Month"
                android:textSize="30sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/img_3" >

            </ImageView>


            <TextView
                android:text="3 Month"
                android:textSize="30sp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/img_2" >
            </ImageView>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/almost" >
            </ImageView>


            <TextView
                android:text="4 Month"
                android:textSize="30sp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/picture" >
            </ImageView>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:adjustViewBounds="true"
                android:background="@drawable/picture2" >
            </ImageView>

            <TextView
                android:text="5 Month"
                android:textSize="30sp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/picture3" ></ImageView>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/img_4" ></ImageView>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/img_6" ></ImageView>

            <TextView
                android:text="6-7 Month"
                android:textSize="30sp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/img_5" ></ImageView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/Back" />
            <TextView
                android:text="Credit:theGreenPinky and Almanac"
                android:textSize="20sp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>